= form_for @thesis do |f|
  - if @thesis.errors.any?
    #error_explanation
      %h2= "#{pluralize(@thesis.errors.count, "error")} prohibited this thesis from being saved:"
      %ul
        - @thesis.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :abstract
    = f.text_area :abstract
  .field
    = f.label :language
    = f.text_field :language
  .field
    = f.label :defended
    = f.date_select :defended
  .field
    = f.label 'New author'
    = f.fields_for :form_author do |author_form|
      .field
        = author_form.label :firstname
        = author_form.text_field :firstname
      .field
        = author_form.label :surname
        = author_form.text_field :surname
  .actions
    = f.submit 'Save'
